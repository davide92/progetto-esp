<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.unipd.dei.rilevatoredicadute.Fourth" >

    <ImageView 
        android:id="@+id/picture" 
    	android:layout_width="50dp"
     	android:layout_height="50dp" 
      	android:layout_marginRight="7dp"
       	android:src="@drawable/immagine2"
       	/>
         
    <TextView
        android:id="@+id/avvenutaTx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/picture"
        android:text="@string/avvenuta"
        android:textSize="20sp" 
        />
    
    <TextView 
        android:id="@+id/dataEora"
     	android:layout_width="wrap_content"
      	android:layout_height="wrap_content" 
       	android:layout_toRightOf="@+id/avvenutaTx"
       	android:layout_below="@+id/picture"
        android:textSize="20sp"
        />
    
    <TextView 
        android:id="@+id/latitudeTx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avvenutaTx"
        android:text="@string/latitude"
        android:textSize="20sp"
        />
    
    <TextView 
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/latitudeTx"
        android:layout_below="@+id/avvenutaTx"
        android:textSize="20sp"
        />
    
    <TextView 
        android:id="@+id/longitudeTx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latitudeTx"
        android:text="@string/longitude"
        android:textSize="20sp"
        />
    
    <TextView 
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/longitudeTx"
        android:layout_below="@+id/latitudeTx"
        android:textSize="20sp"
        />
    
    <TextView 
        android:id="@+id/notificaOk"
     	android:layout_width="wrap_content" 
     	android:layout_height="wrap_content"
       	android:layout_below="@+id/longitude"
        android:layout_marginRight="5dp" 
        android:text="@string/notificaOk" 
        android:textSize="20sp"/>

	<CheckBox 
	    android:id="@+id/cbNotifica" 
    	android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
      	android:layout_toRightOf="@+id/notificaOk"
       	android:layout_below="@+id/longitude"
        android:layout_centerVertical="true"/>

</RelativeLayout>
